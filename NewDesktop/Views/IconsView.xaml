<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="av" 
             x:Class="NewDesktop.Views.IconView"
             av:DesignHeight="80" av:DesignWidth="64">
    <Grid>
        <Border CornerRadius="4" Margin="10" VerticalAlignment="Top" Height="44" Width="44">
            <Border.Background>
                <ImageBrush ImageSource="{Binding JumboIcon}"/>
            </Border.Background>
            
        </Border>
        <TextBlock Text="{Binding Name}" Grid.Row="1" FontSize="9" TextWrapping="Wrap" TextAlignment="Center" Height="24" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>