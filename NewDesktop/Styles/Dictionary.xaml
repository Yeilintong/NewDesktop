<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ScrollBar 控件全局样式 -->
    <Style x:Key="CustomScrollBarStyle" TargetType="ScrollBar">
        <!-- 设置滚动条基准宽度（实际最终宽度由模板内的 Grid 控制） -->
        <Setter Property="Width" Value="4"/>
        <Setter Property="MinWidth" Value="4"/>

        <!--设置滚动条宽度-->
        <Setter Property="Template">
            <Setter.Value>

                <ControlTemplate TargetType="ScrollBar">

                    <!-- 滚动条容器，设置实际显示宽度为4 -->
                    <Grid SnapsToDevicePixels="true" HorizontalAlignment="Stretch" >

                        <!-- 行定义（原始设计包含3行：上下按钮+轨道，现仅保留中间轨道部分） -->
                        <Grid.RowDefinitions>
                            <!-- 原始顶部按钮行 -->
                            <!-- <RowDefinition Height="Auto"/> -->

                            <!-- 主轨道区域（使用 * 填满可用空间） -->
                            <RowDefinition Height="*"/>

                            <!-- 原始底部按钮行 -->
                            <!-- <RowDefinition Height="Auto"/> -->
                        </Grid.RowDefinitions>

                        <!-- Width：轨道实际宽度（可能超出父容器宽度）IsDirectionReversed：反转滚动方向  -->
                        <Track Name="PART_Track" IsDirectionReversed="True">

                            <!-- 滑块定义 -->
                            <Track.Thumb>
                                <!-- 可拖动的滑块控件 -->
                                <Thumb>
                                    <!-- 滑块视觉模板 -->
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <!-- 滑块容器（设置圆角） -->
                                            <Rectangle  Fill="White" RadiusX="1.5" RadiusY="1" Width="4" HorizontalAlignment="Stretch"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>

                            <!-- 上翻页按钮（设置为透明不可见但保留功能） 
                            <Track.DecreaseRepeatButton>
                                透明度（Opacity）设为0隐藏但保留点击区域
                                <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0"/>
                            </Track.DecreaseRepeatButton>-->

                            <!-- 下翻页按钮（设置为透明不可见但保留功能） 
                            <Track.IncreaseRepeatButton>
                                透明度（Opacity）设为0隐藏但保留点击区域
                                <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0"/>
                            </Track.IncreaseRepeatButton>-->

                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>